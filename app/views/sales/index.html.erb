
<h1> Stoop Sales </h1>

 <% @sales.each do |sale| %>
<div>
		<p> Name: <%= link_to sale.name, sale_path(sale) %> </p>
		<br>
		<p> Address: <%= sale.address %> </p>
		<br>
		<p> City: <%= sale.city %></p>
		<br>
		<p> Date: <%= sale.date %></p>
		<br>
		<p> Time: <%= sale.time %></p>
		<br>

		<br>
		<br>

		<%= button_to 'EDIT', edit_sale_path(sale), method: 'get', :class => 'btn btn-success'%> 
		<%= button_to 'DELETE', sale_path(sale), method: 'delete', :class => 'btn btn-danger' %> 

</div> 
	<% end %>

