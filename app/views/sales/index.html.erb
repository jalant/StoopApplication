    <% @sales.each do |sale| %>
    <% if sale.date.to_date >= Date.today %>

    <li class="block">

        <%= link_to sale.title, sale_path(sale), :class => 'sale-title' %>

        <ul class="meta">
          <li><%= sale.address %></li>
          <li><%= sale.city %><br/></li>
          <li><%= sale.date %><br/></li>
          <li><%= sale.time %><br/><li>
        </ul>

        <% if current_user && current_user.sales != [] && current_user.sales.include?(sale) %>
        <div class="edit-sale">
          <%= link_to (image_tag('/assets/edit.png')), edit_sale_path(sale), method: 'get', :class => 'btn button' %> 
          <%= link_to (image_tag('/assets/delete.png')), sale_path(sale), method: 'delete', :class => 'btn button' %>
        </div>
        <% end %>
        <% end %>
