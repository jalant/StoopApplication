<div class="row">
    <div class="large-12 columns">

      <div class="row">

  <!-- Side Bar -->
    <%= form_for @sale do |f| %> 
        <div class="large-4 small-12 columns">

          <img src="http://placehold.it/500x500&text=Logo">

          <%= f.label 'Title: ' %> 
          <%= f.text_field :title %>
          <br> 
          <%= f.label :Address %> 
          <%= f.text_field :address %>

          <br>
          <%= f.label :city %> 
          <%= f.text_field :city %>

          <br>

          <%= f.label :date %> 
          <%= select_date Date.today, { :order => [:month, :day, :year], :start_year => Date.today.year, :end_year => Date.today.year + 3 } %>
          <br>
          <%= f.label :time %> 
          <%= f.text_field :time %>

          <br>

        </div>

    <!-- End Side Bar -->


    <!-- Thumbnails -->

        <div class="large-8 columns">
          <div class="row">

          	<h2> Items </h2>
 						<%= f.fields_for :items do |builder| %>

             <div class="large-4 small-6 columns">
              <img src="http://placehold.it/500x500&text=Thumbnail">

              <div class="panel">
                <h5>Item Name</h5>
                <%= builder.text_field :name %>

                <h5>Price</h5>
                <%= builder.number_field :price%>

                <h5>Description</h5>
                <%= builder.text_area :description%>

                 <h5>Image URL</h5>
                <%= builder.text_field :image %>
              </div>
            </div>

         	 <% end %> 
          
    <!-- End Thumbnails -->


          </div>
        </div>
      </div>


 
  <%= f.submit %>
   <% end %> 
    

    </div>
  </div>