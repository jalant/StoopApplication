<div class="row">
    <div class="large-12 columns">

      <div class="row">

  <!-- Side Bar -->
    <%= form_for @sale do |f| %> 
        <div class="large-4 small-12 columns">

         <img src= "http://laurenliloia.com/wp-content/uploads/2012/04/StoopSale_feature_Logo.jpg">

          <%= f.label 'Title: ' %> 
          <%= f.text_field :title %>
          <br> 
          <%= f.label :Address %> 
          <%= f.text_field :address %>

      
      
          <br>

          <%= f.label :date %> 
          <%= select_date Date.today, { :order => [:month, :day, :year], :start_year => Date.today.year, :end_year => Date.today.year + 3 } %>
          <br>
          <%= f.label :time %> 
          <%= f.select :time, [ 
     ["6:00am"], ["7:00am"], ["8:00am"], ["9:00am"], ["10:00am"], ["11:00am"], ["12:00pm"], ["1:00pm"], ["2:00pm"], ["3:00pm"], ["4:00pm"], ["5:00pm"], ["6:00pm"], ["7:00pm"], ["8:00pm"], ["9:00pm"], ["10:00pm"], ["11:00pm"], ["12:00am"], ["1:00am"], ["2:00am"], ["3:00am"], ["4:00am"], ["5:00am"] ]%>

          <br>

        </div>

    <!-- End Side Bar -->


    <!-- Thumbnails -->

        <div class="large-8 columns">
          <div class="row">

          	<h2> Items </h2>
 						<%= f.fields_for :items do |builder| %>

             <div class="large-4 small-6 columns">
              <img src="http://placehold.it/500x500&text=Thumbnail">

              <div class="panel">
                <h5>Item Name</h5>
                <%= builder.text_field :name %>

                <h5>Price</h5>
                <%= builder.number_field :price, :value => 0 %>

                <h5>Description</h5>
                <%= builder.text_area :description%>

                 <h5>Image URL</h5>
                <%= builder.text_field :image %>
              </div>
            </div>

         	 <% end %> 
          
    <!-- End Thumbnails -->


          </div>
        </div>
      </div>


 
  <%= f.submit class: 'button success radius large'%>
   <% end %> 
    

    </div>
  </div>
