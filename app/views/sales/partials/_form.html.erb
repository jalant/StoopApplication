
<h1 class='tanay'> Please fill in the respective details about the stoop sale. </h1>

<%= form_for @sale do |f| %> 
<div>
	<%= f.label 'Title: ' %> 
	<%= f.text_field :title %>
	<br> 
	<%= f.label :Address %> 
	<%= f.text_field :address %>

	<br>
	<%= f.label :city %> 
	<%= f.text_field :city %>

	<br>

	<%= f.label :date %> 
	<%= f.text_field :date %>

	<br>

	<%= f.label :time %> 
	<%= f.text_field :time %>

	<br>

	<%= f.submit %>

</div> 
<% end %>



