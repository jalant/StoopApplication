
<h1 class='tanay'> Please fill in the respective details about your stoop sale. </h1>

<%= form_for @sale do |f| %> 
<div>
	<%= f.label 'Title: ' %> 
	<%= f.text_field :title %>
	<br> 
	<%= f.label :Address %> 
	<%= f.text_field :address %>

	<br>
	<%= f.label :city %> 
	<%= f.text_field :city %>

	<br>

	<%= f.label :date %> 
	<%= select_date Date.today, { :order => [:month, :day, :year], :start_year => Date.today.year, :end_year => Date.today.year + 3 } %>
	<br>
	<%= f.label :time %> 
	<%= f.text_field :time %>

	<br>

<h2> Items </h2>

  <%= f.fields_for :items do |builder| %>
  
    <%= builder.label "Item Name" %>
    <%= builder.text_field :name %>
 
  	<%= builder.label "Price" %>
    <%= builder.number_field :price, allowNegative: false %>
   
  	<%= builder.label "Description" %>
    <%= builder.text_field :description %>
    <br>

  <% end %>	
	<%= f.submit %>

</div> 
<% end %>
