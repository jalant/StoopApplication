<script src="http://maps.google.com/maps/api/js?key=AIzaSyAWySaUYYlEwvq3KquSOJmFpPwrnLItW4Y&sensor=false" type="text/javascript"></script>
<h2>stoop sales in:</h2>
  <h1><%= @neighborhood.name %></h1>

<div id="map" style="width: 500px; height: 400px;"></div>

<script type="text/javascript">
    var locations = [];

    <% @locations.each do |location| %>
    locations.push(["<%= location[0] %>",<%= location[1] %>,<%= location[2] %>]);
    <% end %>

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 13,
      center: new google.maps.LatLng(<%= @map_lat %>, <%= @map_lng %>),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {  
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }</script>

<div class="neighborhood-sales">
<ul class="small-block-grid-4">
<div class="single-sale">
  <% unless @neighborhood.sales.empty? %>
  <% @neighborhood.sales.each do |sale| %>
    <h1>Name: <%= link_to sale.title, sale_path(sale) %> </h1>
    <br>
    <p> Address: <%= sale.address %> </p>
    <br>
    <p> City: <%= sale.city %></p>
    <br>
    <p> Date: <%= sale.date %></p>
    <br>
    <p> Time: <%= sale.time %></p>
    <br>
    <br>
    <br>
    <% if current_user && current_user.sales != [] && current_user.sales.include?(sale) %>
    <%= button_to 'EDIT', edit_sale_path(sale), method: 'get', :class => 'btn btn-success'%> 
    <%= button_to 'DELETE', sale_path(sale), method: 'delete', :class => 'btn btn-danger' %> 
    <% end %>
  <% end %>
  <% else %>
    <h1> No sales in this neighborhood, check back later! </h1>
  <% end %>
  </div> 
</div> 
