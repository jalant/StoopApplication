<%= form_for @user do |f| %> 
	<%= f.label 'Username: ' %> 
	<%= f.text_field :username %>
	<br> 
	<%= f.label 'Email address' %> 
	<%= f.email_field :email %>
	<%= f.label 'Password' %> 
	<%= f.password_field :password %>
	<br>
	<%= f.label 'Your Neighborhood: '%>
	<%= f.select :neighborhood_id, Neighborhood.all.map{ |neighborhood| [neighborhood.name,neighborhood.id] }%>
	<%= f.submit %>
<% end %>



